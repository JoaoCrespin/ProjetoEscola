<Page x:Class="LoginCadastroDB.PageLogin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LoginCadastroDB"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280" Background="White"
      Title="PageLogin">

    <Grid>
        <TextBlock Panel.ZIndex="1" Width="345" Height="20" Foreground="#9094B6"  IsHitTestVisible="False" Text="Nome" Visibility="{Binding ElementName=areaNme, Path=Text.IsEmpty, Converter={StaticResource BoolToVis} }" FontSize="14" Margin="446,213,489,487" />
        <TextBox  x:Name="areaNome" Height="51" VerticalAlignment="Top" HorizontalAlignment="Left"  Margin="429,198,0,0"  Width="432" Style="{StaticResource EstiloTextBox}"/>
        <PasswordBox x:Name="areaSenha" Height="50" VerticalAlignment="Top" HorizontalAlignment="Left"  Margin="429,280,0,0" Width="432" />
        <Button Content="Login" Click="LoginButton_Click" Height="50" Width="200" HorizontalAlignment="Left" Margin="363,389,0,281"/>
        <Button Content="Cadastre-se" Height="50" Width="200" HorizontalAlignment="Left" Margin="738,389,0,281" Click="Button_Click"/>
    </Grid>
</Page>
