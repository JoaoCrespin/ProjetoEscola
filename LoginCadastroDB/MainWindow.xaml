<Window x:Class="LoginCadastroDB.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LoginCadastroDB"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBox x:Name="caixaNome"  Margin="0,5"/>
            <PasswordBox x:Name="caixaSenha"  Margin="0,5"/>
            <TextBox x:Name="caixaCpf"  Margin="0,5"/>
            <TextBox x:Name="caixaCargo"  Margin="0,5"/>
            <TextBox x:Name="caixaContato"  Margin="0,5"/>
            <Button Content="Cadastrar" Click="botaoCadastrar_Click" Margin="0,10"/>
        </StackPanel>
    </Grid>
</Window>
